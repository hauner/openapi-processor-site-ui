{{! versions button & menu }}

<oap-versions current="{{#with (version this)}}{{displayVersion}}{{/with}}">
  {{#each this.versions}}
    {{#if (isPageComponent ..)}}

      {{#unless (eq this.displayVersion @root.page.displayVersion)}}
        <oap-version href="{{this.url}}">{{this.displayVersion}}</oap-version>
      {{/unless}}

    {{else}}

      {{#unless (eq this.displayVersion ../versions.[0].displayVersion)}}
        <oap-version href="{{this.url}}">{{this.displayVersion}}</oap-version>
      {{/unless}}

    {{/if}}
  {{/each}}
</oap-versions>
